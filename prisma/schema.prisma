generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             String   @id @default(uuid())
  name           String
  description    String
  price          Float
  rating         Int
  category       Category @relation(fields: [categoryId], references: [id])
  categoryId     String
  tier           String
  image          String
  additionalInfo String?
  review         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  maxProducts Int      @default(10)
  minPrice    Float
  maxPrice    Float
  products    Product[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
